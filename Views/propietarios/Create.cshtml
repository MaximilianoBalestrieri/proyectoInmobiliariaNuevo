@{
    Layout = null;
}

@model proyectoInmobiliariaNuevo.Models.Propietario

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Estilo personalizado para el título */
        .titulo-formulario {
            background-color: #000; /* Fondo negro */
            color: #fff; /* Texto blanco */
            padding: 10px 20px; /* Espaciado interno */
            border-radius: 5px; /* Bordes redondeados */
            text-align: center; /* Centrar el texto */
        }
    </style>
</head>

<!-- Contenedor para centrar el formulario en la página -->
<div class="container my-5">
    <!-- Card para darle un cuadro con borde y fondo al formulario -->
    <div class="card shadow-lg w-50 mx-auto">
        <div class="card-body">
            <!-- Título con fondo negro, letras blancas y borde redondeado -->
            <h2 class="titulo-formulario mb-4">Crear Propietario</h2>

            @using (Html.BeginForm("Create", "Propietarios", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Nombre del Propietario</label>
                        @Html.TextBoxFor(model => model.NombrePropietario, new { @class = "form-control", placeholder = "Ingrese el nombre", required = "required" })
                        @Html.ValidationMessageFor(model => model.NombrePropietario, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Apellido del Propietario</label>
                        @Html.TextBoxFor(model => model.ApellidoPropietario, new { @class = "form-control", placeholder = "Ingrese el apellido", required = "required" })
                        @Html.ValidationMessageFor(model => model.ApellidoPropietario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">DNI del Propietario</label>
                        @Html.TextBoxFor(model => model.DniPropietario, new { @class = "form-control", placeholder = "Ingrese el DNI", required = "required", type = "number" })
                        @Html.ValidationMessageFor(model => model.DniPropietario, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Contacto del Propietario</label>
                        @Html.TextBoxFor(model => model.ContactoPropietario, new { @class = "form-control", placeholder = "Ingrese el contacto", required = "required" })
                        @Html.ValidationMessageFor(model => model.ContactoPropietario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg">Guardar</button>
                    <a href="@Url.Action("Index", "Propietarios")" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
